<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 2.6//EN"
        "http://tuckey.org/res/dtds/urlrewrite2.6.dtd">
<urlrewrite>
    <rule>
        <from>^/controller?command=(\w+)</from>
        <to>/controller?command=$1</to>
    </rule>
    <rule>
        <from>^/(\w+)$</from>
        <to>/controller?command=showPage?pageSlug=$1</to>
    </rule>
</urlrewrite>